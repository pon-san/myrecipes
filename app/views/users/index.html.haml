= render 'shared/page_title', title: 'All users'

.center
  - @users.each do |user|
    .row.col-md-8
      =user.username

    %ul.listing
      .row
        .well.col-md-4.col-md-offset-4
          %li.chef-title= link_to user.username.capitalize, user_path(user)
          %li
            - if user.recipes
              %small= pluralize(user.recipes.count, 'recipe') 
          - if logged_in? && current_user.admin? && !user.admin?
            %li= link_to 'Delete this user', user_path(user), method: :delete, data: { confirm: 'Are you sure you want to delete the chef and all associated recipes?' } 

= paginate @users