= render 'shared/page_title', title: "Available Ingredients"

.ingredients.center
  - @ingredients.each do |ing|
    %ul.listing
      .row
        .well.col-md-4.col-md-offset-4
          %li.chef-title= link_to ing.name.capitalize, ingredient_path(ing)
          %li
            %small= pluralize(ing.recipes.count, "recipe") if ing.recipes
          - if logged_in? && current_chef.admin?
            %li= link_to "Edit this ingredient", edit_ingredient_path(ing)