%nav.navbar.navbar-expand-lg.navbar-light.bg-light
  = link_to root_path, class: 'navbar-brand' do
    %i.fas.fa-utensils
    MYRECIPES


  .collapse.navbar-collapse#navbarSupportedContent
    %ul.navbar-nav.mr-auto
      %li.nav-item
        = link_to "All recipes", recipes_path, class: 'nav-link'
      %li.nav-item
        = link_to "All users", users_path, class: 'nav-link'
      %li.nav-item.dropdown
        = link_to "Dropdown", "#", id: 'navbarDropdown', class: 'nav-link dropdown-toggle', role: "button", data: {toggle: "dropdown"}, aria: {haspopup: "true", expanded: "false"}
        .dropdown-menu{aria: {labelledby: "navbarDropdown"}}
          = link_to "Action", "#", class: 'dropdown-item'
          = link_to "Action", "#", class: 'dropdown-item'
          .dropdown-divider
          = link_to "somethingelse", "#", class: 'dropdown-item'

    %ul.navbar-nav.navbar-right
      - if logged_in?
        .btn-group
          %button.btn.btn-danger.dropdown-toggle{type: "button", data: {toggle: "dropdown",}, aria: {haspopup: "true", expanded: "false"}}
            =current_user.username.capitalize + "'s profile"
          .dropdown-menu
            =link_to "View your profile", user_path(current_user), class: 'dropdown-item'
            =link_to "Edit your profile", edit_user_path(current_user), class: 'dropdown-item'
            =link_to "Action", "#", class: 'dropdown-item'
            .dropdown-divider
            =link_to "Log out", logout_path, class: 'dropdown-item', method: :delete
      - else
        %li.nav-item= link_to 'Log in', login_path, class: 'nav-link header-link-to-guest'
        %li.nav-item= link_to 'Signup', signup_path, class: 'nav-link header-link-to-guest'
